<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:clickable="true">
    <View
        android:id="@+id/spaceTopProfile"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentTop="true"
        android:background="@color/colorMain" />

    <TextView
        android:id="@+id/textViewNoteLangProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spaceTopProfile"
        android:layout_margin="10dp"
        android:text="Language"
        android:textSize="16sp" />

    <Space
        android:id="@+id/centerDialogProfile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@+id/spaceTopProfile"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textViewNoteLangProfile" />

    <TextView
        android:id="@+id/textViewLanguageProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spaceTopProfile"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/centerDialogProfile"
        android:text="English"
        android:textSize="16sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLanguageProfile"
        android:layout_margin="10dp"
        android:text="Gender"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewGenderProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewLanguageProfile"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/centerDialogProfile"
        android:text="Male"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewGenderProfile"
        android:layout_margin="10dp"
        android:text="Birthday"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewBirthDayProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewGenderProfile"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/centerDialogProfile"
        android:text="10/03/1994"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewBirthDayProfile"
        android:layout_margin="10dp"
        android:text="Mobile"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewPhoneProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewBirthDayProfile"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/centerDialogProfile"
        android:text="01684222680"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPhoneProfile"
        android:layout_margin="10dp"
        android:text="Email"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewEmailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewPhoneProfile"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/centerDialogProfile"
        android:text="nguyendo94vn@gmail.com"
        android:textSize="16sp" />

    <View
        android:id="@+id/spaceBottonProfile"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/textViewEmailProfile"
        android:background="@color/colorMain" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spaceBottonProfile"
        android:layout_marginTop="20dp"
        android:background="@color/colorWhite">

        <Button
            android:id="@+id/btnAcceptCloseProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:background="@drawable/custom_button_accept"
            android:text="Accept"
            android:textColor="@color/colorButtonMain"
            android:textSize="14sp"
            android:textStyle="normal" />
    </RelativeLayout>
</RelativeLayout>
