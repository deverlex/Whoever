<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemInboxFrame"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@color/colorWhite">

    <vn.whoever.views.customviews.RoundedImageView
        android:id="@+id/imageAvatarOnInbox"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/emngan" />

    <RelativeLayout
        android:id="@+id/layoutTimeInteractiveMessage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/timeInteractiveMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:text="4 giờ"
            android:textColor="@color/colorSilver"
            android:textSize="10dp" />

        <ImageView
            android:id="@+id/stateInteractiveMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/timeInteractiveMessage"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon_seen" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutContentPreviewInbox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/imageAvatarOnInbox">

        <TextView
            android:id="@+id/nickNameOnPreviewInbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Hồng Anh"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textMessagePreviewOnInbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nickNameOnPreviewInbox"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Trời nóng quá"
            android:textColor="@color/colorSilver"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/imageAvatarOnInbox"
        android:background="@color/colorSilver" />
</RelativeLayout>
