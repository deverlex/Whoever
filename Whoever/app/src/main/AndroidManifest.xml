<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.whoever"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".views.activities.MainActivity"
            android:windowSoftInputMode="adjustPan|stateHidden"
            android:parentActivityName=".views.activities.StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activities.MainActivity" />
        </activity>

        <activity android:name=".views.activities.StartActivity"
            android:windowSoftInputMode="stateHidden|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".views.activities.SearchContactActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <activity android:name=".views.activities.AppSettingActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity android:name=".views.activities.AccountSettingActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity android:name=".views.activities.HelpCenterActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity android:name=".views.activities.LogActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity android:name=".views.activities.PrivacyActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity android:name=".views.activities.ReportActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity android:name=".views.activities.ProifileActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity android:name=".views.activities.ReplyActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name=".views.activities.LoadActivity"
            android:windowSoftInputMode="stateHidden|adjustNothing" />


        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />

        <meta-data android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>


    </application>

</manifest>
